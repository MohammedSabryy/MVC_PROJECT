@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <a class="btn btn-primary mt-3" asp-action="Create">Create New Role</a>
</div>

<div class="mt-3">
    <form method="get" class="row offset-md-2" asp-action="Index">
        <div class="col-md-10">
            <input oninput="" type="search" class="form-control" placeholder="Role's Name..." name="email" required />
        </div>

    </form>
</div>



<table class="table table-striped table-hover">
    <thead>
        <tr class="text-center">
            <td>@Html.DisplayNameFor(d => d.Id)</td>
            <td>@Html.DisplayNameFor(d => d.Name)</td>
           


            <td>Details</td>
            <td>Edit</td>
            <td>Delete</td>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            <tr class="text-center">
                <td>@item.Id</td>
                <td>@item.Name</td>
              
                <partial name="_ButtonsPartialView" Model="@item.Id"></partial>
            </tr>
        }
        

    </tbody>
</table>


