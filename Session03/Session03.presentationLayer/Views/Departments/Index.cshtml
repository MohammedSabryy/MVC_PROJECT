
@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<div>
    <a class="btn btn-primary mt-3" asp-action="Create">Create New Department</a>
</div>
@if (Model.Any())
{
    <h1>All Departments</h1>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(d=>d.Code)</td>
            <td>@Html.DisplayNameFor(d=>d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.Date)</td>

            <td>Details</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.Date</td>

                <td><a asp-action="Details" class="btn btn-warning"><i class="fas fa-eye"></i>Details</a></td>
                <td><a asp-action="Edit">Edit</a></td>
                <td><a asp-action="Delete">Delete</a></td>
        </tr>
        }
    </tbody>
    </table>



}
else
{
    <div class="mt-3 alert-warning">
        <h2>NO DEPARTMENTS</h2>
    </div>
    
}
